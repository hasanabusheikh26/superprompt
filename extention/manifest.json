{
  "manifest_version": 3,
  "name": "SuperPrompt",
  "version": "1.0.0",
  "description": "Enhance any text on any website instantly",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://superprompt-lac.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "SuperPrompt"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}