

{
  "manifest_version": 3,
    "name": "SuperPrompt",
    "version": "1.0",
    "description": "Highlight → Enhance → Replace. World-class prompt assistant.",
    "permissions": ["scripting", "activeTab", "storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/icon.png",
            "48": "assets/icon.png",
            "128": "assets/icon.png"
        }
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/content.js"],
            "css": ["styles.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["assets/icon.png"],
            "matches": ["<all_urls>"]
        }
    ]
  }